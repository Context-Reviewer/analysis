{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "signals-1.0",
  "title": "Context-Reviewer Signal Definition Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "signal_id",
    "version",
    "title",
    "tier",
    "description",
    "epistemics",
    "definition",
    "outputs",
    "ui"
  ],
  "properties": {
    "signal_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": { "type": "string", "minLength": 3, "maxLength": 120 },
    "tier": { "type": "string", "enum": ["A", "B", "C"] },
    "description": { "type": "string", "minLength": 20, "maxLength": 800 },

    "epistemics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["supports", "does_not_support", "failure_modes", "scope_statement"],
      "properties": {
        "supports": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 10, "maxLength": 240 }
        },
        "does_not_support": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 10, "maxLength": 240 }
        },
        "failure_modes": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string", "minLength": 10, "maxLength": 260 }
        },
        "scope_statement": { "type": "string", "minLength": 20, "maxLength": 260 }
      }
    },

    "definition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["required_input_fields", "unit_of_analysis", "inclusion_rules", "exclusion_rules"],
      "properties": {
        "required_input_fields": {
          "type": "array",
          "minItems": 3,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "joined_item_type",
              "source_index",
              "thread_permalink",
              "parent_context",
              "author",
              "body",
              "body_len",
              "timestamp_parsed",
              "timestamp_raw",
              "captured_at",
              "topics",
              "topics_raw",
              "sentiment_compound",
              "sentiment_pos",
              "sentiment_neg",
              "sentiment_neu",
              "parent_author_type",
              "thread_primary_topic"
            ]
          }
        },
        "unit_of_analysis": { "type": "string", "enum": ["item", "thread", "day", "author"] },
        "inclusion_rules": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/rule" }
        },
        "exclusion_rules": {
          "type": "array",
          "minItems": 0,
          "items": { "$ref": "#/$defs/rule" }
        }
      }
    },

    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["score_policy", "allowed_language", "metrics", "example_selection"],
      "properties": {
        "score_policy": { "$ref": "#/$defs/scorePolicy" },
        "allowed_language": {
          "type": "object",
          "additionalProperties": false,
          "required": ["allowed_phrases", "banned_phrases"],
          "properties": {
            "allowed_phrases": {
              "type": "array",
              "minItems": 3,
              "items": { "type": "string", "minLength": 2, "maxLength": 120 }
            },
            "banned_phrases": {
              "type": "array",
              "minItems": 3,
              "items": { "type": "string", "minLength": 2, "maxLength": 120 }
            }
          }
        },
        "metrics": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/metric" }
        },
        "example_selection": {
          "type": "object",
          "additionalProperties": false,
          "required": ["max_examples", "ordering", "must_include_fields"],
          "properties": {
            "max_examples": { "type": "integer", "minimum": 5, "maximum": 200 },
            "ordering": {
              "type": "string",
              "enum": ["source_index_asc", "score_desc_then_time", "time_desc"]
            },
            "must_include_fields": {
              "type": "array",
              "minItems": 4,
              "uniqueItems": true,
              "items": {
                "type": "string",
                "enum": [
                  "source_index",
                  "timestamp_parsed",
                  "joined_item_type",
                  "body",
                  "thread_permalink",
                  "thread_primary_topic",
                  "sentiment_compound",
                  "rule_hits",
                  "captured_at"
                ]
              }
            }
          }
        }
      }
    },

    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": ["report_sections", "display_order"],
      "properties": {
        "report_sections": {
          "type": "array",
          "minItems": 5,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "tier_badge",
              "scope_statement",
              "supports",
              "does_not_support",
              "failure_modes",
              "definition_summary",
              "metrics_table",
              "examples_table",
              "repro_fingerprint"
            ]
          }
        },
        "display_order": { "type": "integer", "minimum": 1, "maximum": 999 }
      }
    }
  },

  "$defs": {
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rule_id", "description", "conditions", "logic"],
      "properties": {
        "rule_id": { "type": "string", "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$" },
        "description": { "type": "string", "minLength": 10, "maxLength": 260 },
        "logic": { "type": "string", "enum": ["all", "any"] },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/condition" }
        }
      }
    },

    "condition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["field", "op", "value"],
      "properties": {
        "field": {
          "type": "string",
          "enum": [
            "body",
            "joined_item_type",
            "thread_primary_topic",
            "sentiment_compound",
            "parent_author_type"
          ]
        },
        "op": {
          "type": "string",
          "enum": ["equals", "in", "regex_any", "contains_any", "gte", "lte"]
        },
        "value": { "type": ["string", "number", "array"], "minLength": 1 }
      }
    },

    "scorePolicy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["score_type", "range", "tier_constraints"],
      "properties": {
        "score_type": { "type": "string", "enum": ["numeric", "band", "presence"] },
        "range": {
          "type": "object",
          "additionalProperties": false,
          "required": ["min", "max"],
          "properties": { "min": { "type": "number" }, "max": { "type": "number" } }
        },
        "tier_constraints": {
          "type": "object",
          "additionalProperties": false,
          "required": ["A", "B", "C"],
          "properties": {
            "A": { "type": "string", "enum": ["numeric", "band", "presence"] },
            "B": { "type": "string", "enum": ["band", "presence"] },
            "C": { "type": "string", "enum": ["presence"] }
          }
        }
      }
    },

    "metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["metric_id", "title", "type", "description"],
      "properties": {
        "metric_id": { "type": "string", "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$" },
        "title": { "type": "string", "minLength": 3, "maxLength": 120 },
        "type": { "type": "string", "enum": ["count", "rate", "distribution", "delta"] },
        "description": { "type": "string", "minLength": 10, "maxLength": 260 }
      }
    }
  }
}
